<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:key="@string/pref_location_key"
        android:singleLine="true"
        android:title="@string/pref_location_label"
        />
    <ListPreference
        android:defaultValue="@string/pref_temp_units_metric"
        android:dialogTitle="@string/pref_temp_units_label"
        android:entries="@array/pref_temp_units_array"
        android:entryValues="@array/pref_temp_units_values"
        android:key="@string/pref_temp_units_key"
        android:title="@string/pref_temp_units_label"
        />


</PreferenceScreen>
